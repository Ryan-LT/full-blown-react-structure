{
  "compilerOptions": {
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@api": ["./src/api"],
      "@hooks": ["./src/hooks"],
      "@store": ["./src/store"],
      "@tests": ["./src/tests"],
      "@types": ["./src/types"],
      "@router": ["./src/router"],
      "@pages": ["./src/pages"],
      "@utils": ["./src/utils"],
      "@services": ["./src/services"],
      "@components": ["./src/components"],
      "@constants": ["./src/constants"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./tests/**/*.ts",
    "./tests/**/*.tsx",
    "./tests/**/**/*.ts",
    "./tests/**/**/*.tsx",
  ],
  "exclude": ["./node_modules/**/*", "./dist/**/*", "./build/**/*", "./config"]
}
